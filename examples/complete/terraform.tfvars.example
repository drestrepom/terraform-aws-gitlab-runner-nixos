# Example terraform.tfvars for GitLab Runner with NixOS
# Copy this file to terraform.tfvars and fill in your GitLab values

# ============================================
# Required: GitLab Configuration
# ============================================
gitlab_token      = "glpat-xxxxxxxxxxxxxxxxxxxx"  # Personal Access Token with 'api' scope
gitlab_project_id = 12345                         # Find in: Project Settings â†’ General

# ============================================
# Optional: Override defaults as needed
# ============================================

# AWS Region
# aws_region = "us-east-1"

# Environment name
# environment = "production"

# Capacity - adjust based on your needs
# max_instances                = 10
# min_idle_instances           = 1
# concurrent_jobs_per_instance = 2

# Instance Types (ARM64)
# instance_types = ["t4g.medium", "t4g.small", "c6g.medium"]

# Storage for Nix store
# root_volume_size = 40

# Additional tags
# additional_tags = {
#   Team       = "platform"
#   CostCenter = "engineering"
# }

